<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hadi.bmicalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_bmi_scale"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_bmi_scale_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.InfoActivity"></activity>
        <activity android:name=".ui.DetailsActivity" />
        <activity
            android:name=".ui.ResultsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>